#### Data exclusion / filtering
orig_data <- orig_data %>%
  drop_na() %>%
  filter(totalCorrect == 16)
data <- data %>%
  drop_na() %>%
  mutate(
    cq1w_corr = (goodinfo == 0 & compq1work == 1) | (goodinfo == 1 & compq1work == 2),
    cq1r_corr = (goodinfo == 0 & compq1romantic == 1) | (goodinfo == 1 & compq1romantic == 2),
    cq1a_corr = (goodinfo == 0 & compq1academic == 1) | (goodinfo == 1 & compq1academic == 2),
    cq1d_corr = (goodinfo == 0 & compq1drugs == 1) | (goodinfo == 1 & compq1drugs == 2),
    cq2w_corr = compq2work == 1,
    cq2r_corr = compq2romantic == 1,
    cq2a_corr = compq2academic == 1,
    cq2d_corr = compq2drugs == 1,
    cq3w_corr = compq3work == 3,
    cq3r_corr = compq3romantic == 3,
    cq3a_corr = compq3academic == 3,
    cq3d_corr = compq3drugs == 3,
    cq4w_corr = (condemn == 1 & compq4work == 1) | (condemn == 0 & compq4work == 2),
    cq4r_corr = (condemn == 1 & compq4romantic == 1) | (condemn == 0 & compq4romantic == 2),
    cq4a_corr = (condemn == 1 & compq4academic == 1) | (condemn == 0 & compq4academic == 2),
    cq4d_corr = (condemn == 1 & compq4drugs == 1) | (condemn == 0 & compq4drugs == 2)
