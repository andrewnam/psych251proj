####Load Relevant Libraries and Functions
library("readxl")
library(dplyr)
library(tidyr)
library(Rmisc)

####Import data

# Using original data
data <- read_excel("../original_paper/original_data.xls")

###Data Preparation
orig_data <- data %>%
  mutate(subject = 1:nrow(data)) %>%
  select(
    #demographics
    -age, -gender, -edu, -income, -generaltrust, -reason, -previousexperience
  )

data <- data %>%
  mutate(subject = 1:nrow(data)) %>%
  select(
    #demographics
    -age, -gender, -edu, -income, -generaltrust, -reason, -previousexperience,
    #computed data
    -qAnswered, -totalCorrect,
    -percCorrect, -ansall,
    -sumdo,-sumtrusts, -sumtrustg, -sumlike, -sumtotal
